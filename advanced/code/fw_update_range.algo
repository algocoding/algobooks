// [left, right]: 현재 방문하는 노드의 구간(시작, 끝)
// idx: 현재 방문하는 노드 번호

const int N = 8;
int arr[N] = {3, 9, 4, 2, 7, 8, 10, 1};
int tree[2*N];		// 구간 트리

int makeTree(int left, int right, int idx)
{
	if(left == right) return tree[idx] = arr[left];   // 구간 시작과 끝이 같은 경우

	int mid = (left + right) / 2;
	int l = makeTree(left, mid, idx * 2);	        // 왼쪽 자식
	int r = makeTree(mid + 1, right, idx * 2 + 1);  // 오른쪽

	return tree[idx] = l + r;
}